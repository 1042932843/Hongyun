<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shouye"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout style="@style/Header">

        <TextView
            android:id="@+id/back"
            style="@style/HeaderBack" />

        <TextView
            android:id="@+id/navbar_title"
            style="@style/HeaderTitle"
            android:layout_width="210dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="应用" />

    </FrameLayout>


        <LinearLayout
            android:id="@+id/homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:background="@color/listItemPressed"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/banner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="1px">

                <RelativeLayout
                    android:id="@+id/dwgk"
                    style="@style/HomeRelativeLayout">

                    <ImageView
                        android:id="@+id/djbo"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/travel"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_djbb"
                        android:text="党务公开" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ryq"
                    style="@style/HomeRelativeLayout"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px">

                    <ImageView
                        android:id="@+id/yxqcyx"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hui_pu_jin_rong"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/yxqcyx"
                        android:text="荣誉墙" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/jyxx"
                    style="@style/HomeRelativeLayout">

                    <ImageView
                        android:id="@+id/xxsjd"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sjd"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/xxsjd"
                        android:text="教育学习" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="1px">

                <RelativeLayout
                    android:id="@+id/dylt"
                    style="@style/HomeRelativeLayout">

                    <ImageView
                        android:id="@+id/djcyliv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/djcyltv"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_dj_cyl"
                        android:text="党员论坛" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/jfgl"
                    style="@style/HomeRelativeLayout"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px">

                    <ImageView
                        android:id="@+id/wsyzz"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/flood_information"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_wsyzb"
