                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/notice_of_program"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_djcfb"
                        android:text="党建大数据" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/ddbgzs"
                    style="@style/HomeRelativeLayout">

                    <ImageView
                        android:id="@+id/lddyzc"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/social_service"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/iconlddyzj"
                        android:text="党代表工作室" />

                </RelativeLayout>

                <RelativeLayout
                    style="@style/HomeRelativeLayout"
                    android:layout_marginLeft="1px"
                    >

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/dwzs"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii" />

                    <TextView
                        android:id="@+id/huimin_subsidies"
                        style="@style/HomeTextItem1"

                        android:drawableTop="@drawable/icon_dwzs"
                        android:text="党务助手"
                        android:visibility="gone" />

                </RelativeLayout>


                <!--<TextView-->
                <!--android:layout_marginBottom="1px"-->
                <!--android:id="@+id/dwjyz"-->
                <!--style="@style/HomeTextItem"-->
                <!--android:layout_height="match_parent"-->
                <!--android:drawableTop="@drawable/icon_dyjyz"-->
                <!--android:text="党员加油站" />-->
                <RelativeLayout style="@style/HomeRelativeLayout">

                    <ImageView
                        android:id="@+id/lxyz"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/aii"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/pests"
                        style="@style/HomeTextItem1"
                        android:drawableTop="@drawable/icon_lxyz"
                        android:text="两学一做"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
</LinearLayout>